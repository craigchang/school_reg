<p id="notice"><%= notice %></p>

<h1>Course Tasks for <%= @course.name %></h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan="1">Category</th>
        <th colspan="1">Name</th>
        <th colspan="1">Is Submitted?</th>
        <th colspan="1">Score</th>
        <th colspan="1">Max Score</th>
        <th colspan="1">Grade</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.category %></td>
          <td><%= task.name %></td>
          <td><%= task.is_submitted %></td>
          <td><%= task.score %></td>
          <td><%= task.max_score %></td>
          <td><%= task.grade %></td>
          <td><%= link_to 'Edit', edit_task_path(task, enrollment_id: @enrollment.id) %></td>
          <td><% link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <% if !@tasks.empty? %>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td><%= @enrollment.total_score %></td>
          <td><%= @enrollment.total_max_score %></td>
          <td><%= @enrollment.total_percentage.to_s + '%' %></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Task', new_task_path(enrollment_id: @enrollment.id), { class: 'btn btn-default' }  %>
<%= link_to 'Back', dashboard_url, { class: 'btn btn-default' }  %>